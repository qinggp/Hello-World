  <%= f.hidden_field :longitude  %>
</tr>
<tr>
  <th>マーカー座標</th>
  <td><%= h @community_marker.latitude %></td>
  <%= f.hidden_field :latitude  %>
</tr>
<tr>
  <th>マップズーム</th>
  <td><%= h @community_marker.zoom %></td>
  <%= f.hidden_field :zoom  %>
</tr>
<tr>
  <th>マップカテゴリ</th>
  <td><%= h @community_marker.map_category.name %></td>
  <%= f.hidden_field :community_map_category_id  %>
</tr>
