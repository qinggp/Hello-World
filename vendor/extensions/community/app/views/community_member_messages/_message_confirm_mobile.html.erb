<b>--- <%= h @model_class.human_name %>参加者にメッセージ送信確認 ---</b><br/>

[宛先]<%= font_coution("※") %><br />
<% @receivers.each do |r| %>
  <%= h r.name %><br />
<% end %>
<% params[:receiver_ids].each do |id| %>
  <%= hidden_field_tag "receiver_ids[]", id %>
<% end %>

[メッセージ]<%= font_coution("※") %><br/>
<%= h @message.body %><br />
<%= f.hidden_field(:body) %>

<%= hidden_field_tag("id", @community.id) %>
<% if @event %>
  <%= hidden_field_tag("event_id", @event.id) %>
<% end %>
<%= hidden_field_tag("message[subject]", Message.normal_subject(current_user)) %>
