<% unless @markers.size.zero? %>
  <div class="caption">
    マップ最新登録一覧
  </div>
  <div class="news_data">
    <div class="news_link" align="left">
      <%= render(:partial => "link_to_thread", :collection => @markers, :as => :thread, :locals => {:named_root => "community_marker"}) %>
    </div>
    <div class="all_link">
      [ <%= link_to("コミュニティマップ", map_community_markers_path(:community_id => @community.id)) %> ]

      <% if @community.topic_and_marker_createable?(current_user) %>
        [
        <%= theme_image_tag("map_pin.png", :size => "12x12", :style => "vertical-align: middle;") %>
        <%= link_to("マーカーの作成", new_community_marker_path(:community_id => @community.id)) %>
        ]
      <% end %>
    </div>
  </div>
<% end %>
