<% pagination_params = {:per_page => params[:per_page], :page => params[:page]}
   category_type = "マップカテゴリ"%>
<center>
  <% form_tag(map_category_list_admin_community_categories_path, :method => :get) do %>
    <% display_round_box(:width => "610px", :white_bg => false) do %>
      <% display_collection_box(@community_map_categories, :collection_name => "現在の登録数", :checked_value => 5) do %>
        <table class="community_categories_table" align="center">
          <tr>
            <%= render :partial => "community_map_category_order_link", :locals => {
                                                                        :paginate_parameter => pagination_params,
                                                                        :category_type => category_type } %>
            <th>&nbsp;</th>
          </tr>
          <% @community_map_categories.each do |community_map_category| %>
            <tr>
              <td><%= h community_map_category.name %></td>
              <td><%= link_to h(community_map_category.community.name), community_path(community_map_category.community_id) %></td>
              <td nowrap><%= link_to h(community_map_category.author.name), user_path(community_map_category.user_id) %></td>
              <td align="center" nowrap>
                <%= link_to '編集',map_category_edit_admin_community_category_path(community_map_category) %>
              </td>
            </tr>
          <% end %>
        </table>
      <% end %>
    <% end %>
  <% end %>
</center>