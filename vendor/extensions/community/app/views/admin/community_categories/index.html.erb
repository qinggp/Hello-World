<% pagination_params = {:per_page => params[:per_page], :page => params[:page]}
   category_type = "カテゴリ名"%>
<div align="center">
  [ <%= link_to "メインカテゴリ作成",new_admin_community_category_path %> ]
  [ <%= link_to "サブカテゴリ作成", sub_category_new_new_admin_community_category_path %> ] ｜
  [ <%= link_to "マップカテゴリ一覧", map_category_list_admin_community_categories_path %> ]
  <% form_tag(admin_community_categories_path, :method => :get) do %>
    <% display_round_box(:width => "610px", :white_bg => false) do %>
      <% display_collection_box(@community_categories, :collection_name => "現在の登録数", :checked_value => 5) do %>
        <table class="community_categories_table" align="center">
          <tr>
            <%= render :partial => "community_category_order_link", :locals => {
                                                                    :paginate_parameter => pagination_params,
                                                                    :category_type => category_type} %>
            <th>サブカテゴリ</th>
            <th>&nbsp;</th>
          </tr>
          <% @community_categories.each do |community_category| %>
            <tr>
              <td><%= h community_category.name %></td>
              <td>
                <%= link_to "サブカテゴリ", sub_category_list_admin_community_category_path(community_category) %>
              </td>
              <td align="center" nowrap>
                <%= link_to "編集", edit_admin_community_category_path(community_category) %>
              </td>
            </tr>
          <% end %>
        </table>
      <% end %>
    <% end %>
  <% end %>
</div>