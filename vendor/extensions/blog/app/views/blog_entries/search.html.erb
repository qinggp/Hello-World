
<div class="center" style="width:610px;">
  <% unless logged_in? %>
    <%= h SnsConfig.title %>メンバーが外部にも公開しているブログが閲覧できます。 <br/>
    <%= link_to theme_image_tag("feed_rdf.gif"), index_feed_blog_entries_path(:format => :rdf) %>
    <%= link_to theme_image_tag("feed_rss.gif"), index_feed_blog_entries_path(:format => :rss) %>
    <%= link_to theme_image_tag("feed_atom.gif"), index_feed_blog_entries_path(:format => :atom) %>
  <% end %>

  <% display_round_box(:width => "610px") do %>
    <table style="width: 600px;">
      <tr>
        <td width="80px">
          ▼キーワード
        </td>
        <td>
          <% form_for(@blog_entry, :url => search_blog_entries_path) do |f| %>
            <%= text_field_tag :keyword, @blog_entry.search_word %>
            <%= f.submit "検索" %>
            <br/>
            ※タイトル・本文より検索を行います。
          <% end %>
        </td>
      </tr>
    </table>
  <% end %>
  <br/>

  <% display_round_box(:width => "610px") do %>

    <div id="search_blog_entries">
      <%= render :partial => "search_blog_entries" %>
    </div>

  <% end %>
</div>
