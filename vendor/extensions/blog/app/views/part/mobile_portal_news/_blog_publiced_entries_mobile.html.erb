<% entries = BlogEntry.visibility_is(BlogPreference::VISIBILITIES[:publiced]).find(:all, :limit => 5, :order => "created_at desc") %>
<hr size="1" noshade>
<% if entries.empty?  %>
  現在最新ブログはありません。
<% else %>
  <a name="blog_entry_news">▽ブログ新着情報</a><br/>
  <% entries.each do |entry| %>
    <%= display_news_line_format_mobile(entry.created_at,
                                        link_to(h(entry.title), blog_entry_path(entry)),
                                        [entry.blog_comments_count,
                                         link_to_user(entry.user, h(entry.user.name))]) %>
    <br/>
  <% end %>
<% end %>
