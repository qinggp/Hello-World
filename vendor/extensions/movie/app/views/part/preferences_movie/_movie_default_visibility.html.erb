<% @preference.movie_preference ||= MoviePreference.new  %>
<% f.fields_for :movie_preference do |mpf|  %>
  <% if view_type == :form %>
    <tr>
      <th>[<%=h MoviePreference.human_attribute_name("default_visibility") %>]</th>
      <td>
        <%= 
          mpf.select(:default_visibility, 
            select_options_for_const("MoviePreference", "VISIBILITIES", :name_space => "movie"))
        %>
      </td>
    </tr>
  <% else %>
    <tr>
      <th>[<%=h MoviePreference.human_attribute_name("default_visibility") %>]</th>
      <td>
        <%=h t("movie.movie_preference.visibility_label.#{@preference.movie_preference.default_visibility_name}") %>
        <%= mpf.hidden_field :default_visibility %>
      </td>
    </tr>
  <% end %>
<% end %>
