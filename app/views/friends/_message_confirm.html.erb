<tr>
  <td class="content_table_title" colspan="2"><%=h displayed_user.name %>さんをトモダチに紹介する</td>
</tr>
<tr>
  <th>[紹介先]</th>
  <td>
    <% @receivers.each do |r| %>
      <%= h r.name %><br />
    <% end %>
    <% params[:receiver_ids].each do |id| %>
      <%= hidden_field_tag "receiver_ids[]", id %>
    <% end %>
  </td>
</tr>
<tr>
  <th>[メッセージ]</th>
  <td><%= hbr @message.body %></td>
  <%= f.hidden_field :body %>
</tr>

<%= f.hidden_field :subject %>
<%= hidden_field_tag("id", displayed_user.id) %>
