<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%= link_to 'Show', :action => :show, :id => user.id %></td>
    <td><%= link_to 'Edit', :action => :edit, :id => user.id %></td>
    <td><%= link_to 'Destroy', {:action => :destroy, :id => user.id}, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', :action => :new %>
