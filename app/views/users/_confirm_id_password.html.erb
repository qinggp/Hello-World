<tr class="">
  <td class="content_table_title" colspan="2">ユーザ情報変更</td>
</tr>
<tr>
  <th>
    <%=h User.human_attribute_name("login") %>※
  </th>
  <td>
    <%= h @user.login %>
    <%= f.hidden_field :login %>
  </td>
</tr>
<tr>
  <th>
    <%=h User.human_attribute_name("current_password") %>※
  </th>
  <td>
    <%= not_print_password(@user.current_password) %>
    <%= f.hidden_field :current_password %>
  </td>
</tr>
<tr>
  <th>
    新しいパスワード
  </th>
  <td>
    <%= @user.authenticated?(@user.password) ? "(変更なし)" : not_print_password(@user.password) %>
    <%= f.hidden_field :password %>
    <%= f.hidden_field :password_confirmation %>
  </td>
</tr>
