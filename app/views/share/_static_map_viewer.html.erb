<% map = static_map_for_records(@records, @latitude, @longitude, @span_lat, @span_lng) %>
<% url_options ||= {} %>

<center>
  <%= theme_image_tag(map.to_s) if map  %>
  <br/>
  <table>
    <tr>
      <td colspan="3" align="center">
        <%= link_for_static_map_direction("↑", :up, @latitude, @longitude, @span_lat, @span_lng, url_options) %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_for_static_map_direction("←", :left, @latitude, @longitude, @span_lat, @span_lng, url_options) %>
      </td>
      <td>
        
      </td>
      <td>
        <%= link_for_static_map_direction("→", :right, @latitude, @longitude, @span_lat, @span_lng, url_options) %>
      </td>
    </tr>
    <tr>
      <td colspan="3" align="center">
        <%= link_for_static_map_direction("↓", :down, @latitude, @longitude, @span_lat, @span_lng, url_options) %>
      </td>
    </tr>
  </table>
  <%= link_for_static_map_zoom("+", :in, @latitude, @longitude, @span_lat, @span_lng, url_options) %>
  <%= link_for_static_map_zoom("-", :out, @latitude, @longitude, @span_lat, @span_lng, url_options) %>
</center>
